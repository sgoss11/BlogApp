<%- include("partials/header") %>
<h1><%= pageTitle %></h1>

<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
    <h2><%= post.title %></h2>
    <p><%= post.content.substring(0, 100) + " ..." %>
      <a href="/posts/<%= post.title %>" class="read-more">Read More</a>
    </p>

<% }); %>
<a href="/compose">
  <i class=" new-post fa-solid fa-circle-plus fa-3x"></i>
</a>



